import pandas as pd
import matplotlib.pyplot as plt

df = pd.read_excel(excel_path)

italy_data = df[df['Entity'] == 'Italy']


plt.figure(figsize=(10, 6))
plt.plot(italy_data['Year'], italy_data['Deaths from air pollution'], marker='o', linestyle='-')

plt.title('Deaths from air pollution for ITALY')
plt.xlabel('Yıl')
plt.ylabel('')
plt.grid(True)
plt.show()

