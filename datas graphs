plt.plot(italy_data['Year'], italy_data['\nAir pollution, mean annual exposure\n(micrograms per cubic meter)'], marker='o', linestyle='-')

plt.title('Air pollution for Italy')
plt.xlabel('Yıl')
plt.grid(True)
plt.show()

