import pandas as pd
import matplotlib.pyplot as plt

df = pd.read_excel(excel_path)

countries = ['Italy', 'Finland', 'Germany', 'Ireland', 'Türkiye']
country_data = df[df['Entity'].isin(countries)]

plt.figure(figsize=(10, 6))
for country in countries:
   plt.plot(country_data[country_data['Entity'] == country]['Year'],
         country_data[country_data['Entity'] == country]['Deaths from air pollution'],
         marker='o', linestyle='-', label=country)

plt.title('Deaths from air pollution for selected countries')
plt.legend()
plt.grid(True)
plt.show()

import pandas as pd
