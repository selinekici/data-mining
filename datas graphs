import pandas as pd
import matplotlib.pyplot as plt


df = pd.read_excel(excel_path)


countries = ['Italy', 'Finland', 'Germany', 'Ireland', 'Türkiye']
country_data = df[df['Entity'].isin(countries)]


years = sorted(country_data['Year'].unique())
pollution_data = {country: country_data[country_data['Entity'] == country]['\nAir pollution, mean annual exposure\n(micrograms per cubic meter)'].values for country in countries}


pollution_values = [pollution_data[country] for country in countries]


plt.figure(figsize=(10, 6))
plt.stackplot(years, pollution_values, labels=countries, alpha=0.7)

plt.title('Air Pollution for Selected Countries')
plt.xlabel('Year')
plt.ylabel('Mean Annual Exposure (µg/m³)')
plt.legend(loc='upper left')
plt.grid(True)
plt.show()
